FROM maven:3.8.4-openjdk-17-slim as builder

WORKDIR /app

COPY ../ .

WORKDIR /app/microorders

RUN mvn clean install -DskipTests

FROM openjdk:17-alpine

WORKDIR /app

# todo someday - app version can be parametrized
COPY --from=builder /app/microorders/target/microorders-1.0.0.jar /app/microorders.jar

EXPOSE 8080

ENTRYPOINT ["java", "-jar", "/app/microorders.jar"]